<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Logs - DoctorSync</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/users.css">
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body class="bg-gray-100 min-h-screen font-sans antialiased">
    <!-- Hamburger Menu -->
    <%- include('nav') -%>

    <!-- Logs Section -->
    <section id="logs" class="mb-12 w-full" style="margin-left: 120px;">
        <h2 class="text-xl font-bold mb-4 text-gray-800">Admin Activity Logs</h2>
        <div class="bg-white rounded-lg shadow overflow-hidden w-full">
            <table class="data-table">
                <thead>
                    <tr>
                        <th class="text-left">Timestamp</th>
                        <th class="text-left">Admin User</th>
                        <th class="text-left">Action</th>
                        <th class="text-left">Target Type</th>
                        <th class="text-left">Target ID</th>
                        <th class="text-left">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach(log => { %>
                        <tr>
                            <td><%= new Date(log.ActivityTimestamp).toLocaleString() %></td>
                            <td><%= log.AdminUsername %></td>
                            <td><%= log.ActionPerformed %></td>
                            <td><%= log.TargetType %></td>
                            <td><%= log.TargetID %></td>
                            <td><%= log.Description %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</main>
</div>

