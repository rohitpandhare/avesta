<!DOCTYPE html>
<html>
<head>
    <title>Doctor Dashboard</title>
    <style>
        .alert {
            padding: 15px;
            margin: 10px 0;
            border-radius: 4px;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .form-group {
            margin-bottom: 15px;
        }
        input[type="number"] {
            padding: 8px;
            width: 200px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        button {
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0069d9;
        }
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(0,0,0,.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <h1>Welcome, Dr. <%= user.Username %></h1>
    
    <div id="message-container"></div>

    <div class="form-group">
        <h2>Add Patient to Your Practice</h2>
        <form id="addPatientForm">
            <label for="patientId">Patient ID:</label>
            <input type="number" id="patientId" name="patient_id" required>
            <button type="submit" id="submitBtn">
                <span id="btnText">Add Patient</span>
                <span id="btnSpinner" class="loading" style="display: none;"></span>
            </button>
        </form>
    </div>

    <script>
        document.getElementById('addPatientForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const patientId = document.getElementById('patientId').value.trim();
            
            try {
                const response = await fetch('/doctor/patients/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ patient_id: patientId }),
                    credentials: 'same-origin' // Important for session cookies
                });
        
                // First check if response is JSON
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    throw new Error('Server returned unexpected response');
                }
        
                const result = await response.json();
                
                if (!response.ok) {
                    throw new Error(result.message || 'Request failed');
                }
        
                // Handle success
                showMessage(result.message, 'success');
                document.getElementById('patientId').value = '';
                
            } catch (error) {
                console.error('Fetch error:', error);
                showMessage(error.message, 'error');
            }
        });
        </script>
</body>
</html>