<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Profile - DoctorSync</title>
    <link rel="stylesheet" href="/css/styles.css"> <style>
        /* Optional: Add custom styles if needed, e.g., for form elements */
    </style>
</head>
<body class="bg-gray-100 min-h-screen font-sans antialiased">
    <%- include('pat/nav', { user: typeof user !== 'undefined' ? user : null }) -%>

    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md my-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Patient Profile</h1>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline"><%= error %></span>
            </div>
        <% } %>

        <% if (patient) { %>
            <div id="viewMode" class="space-y-4">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Your Details</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-gray-600 font-medium">Patient ID:</p>
                        <p class="text-gray-800"><%= patient.PatientID %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">User ID:</p>
                        <p class="text-gray-800"><%= patient.UserID %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Name:</p>
                        <p class="text-gray-800"><%= patient.Name %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Address:</p>
                        <p class="text-gray-800"><%= patient.Address %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Phone:</p>
                        <p class="text-gray-800"><%= patient.Phone %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Date of Birth:</p>
                        <p class="text-gray-800"><%= patient.DOB %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Blood Group:</p>
                        <p class="text-gray-800"><%= patient.BloodGroup %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Medical History:</p>
                        <p class="text-gray-800 whitespace-pre-line"><%= patient.MedicalHistory || 'N/A' %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Emergency Contact Name:</p>
                        <p class="text-gray-800"><%= patient.EmergencyContact %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Emergency Phone:</p>
                        <p class="text-gray-800"><%= patient.EmergencyPhone %></p>
                    </div>
                    <div>
                        <p class="text-gray-600 font-medium">Aadhar ID:</p>
                        <p class="text-gray-800"><%= patient.AadharID || 'N/A' %></p>
                    </div>
                </div>

                <div class="mt-6 text-right">
                    <button id="editProfileBtn" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Edit Profile</button>
                </div>
            </div>

            <form id="editMode" class="hidden space-y-4" action="/patient/myProfile" method="POST">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Edit Details</h2>
                
                <input type="hidden" name="PatientID" value="<%= patient.PatientID %>">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name:</label>
                        <input type="text" id="name" name="Name" value="<%= patient.Name %>" required
                               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <label for="address" class="block text-sm font-medium text-gray-700">Address:</label>
                        <textarea id="address" name="Address" rows="3" required
                                  class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500"><%= patient.Address %></textarea>
                    </div>
                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700">Phone:</label>
                        <input type="tel" id="phone" name="Phone" value="<%= patient.Phone %>" required
                               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <label for="dob" class="block text-sm font-medium text-gray-700">Date of Birth:</label>
                        <input type="date" id="dob" name="DOB" value="<%= patient.DOB %>" required
                               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <label for="bloodGroup" class="block text-sm font-medium text-gray-700">Blood Group:</label>
                        <select id="bloodGroup" name="BloodGroup" required
                                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                            <% const bloodGroups = ['A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-']; %>
                            <% bloodGroups.forEach(group => { %>
                                <option value="<%= group %>" <%= patient.BloodGroup === group ? 'selected' : '' %>><%= group %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label for="medicalHistory" class="block text-sm font-medium text-gray-700">Medical History:</label>
                        <textarea id="medicalHistory" name="MedicalHistory" rows="3"
                                  class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500"><%= patient.MedicalHistory || '' %></textarea>
                    </div>
                    <div>
                        <label for="emergencyContact" class="block text-sm font-medium text-gray-700">Emergency Contact Name:</label>
                        <input type="text" id="emergencyContact" name="EmergencyContact" value="<%= patient.EmergencyContact %>" required
                               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <label for="emergencyPhone" class="block text-sm font-medium text-gray-700">Emergency Phone:</label>
                        <input type="tel" id="emergencyPhone" name="EmergencyPhone" value="<%= patient.EmergencyPhone %>" required
                               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>

                <div class="mt-6 flex justify-end space-x-4">
                    <button type="button" id="cancelEditBtn" class="bg-gray-300 text-gray-800 px-6 py-2 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500">Cancel</button>
                    <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">Save Changes</button>
                </div>
            </form>
        <% } else if (!error) { %>
            <p class="text-center text-gray-600">Patient profile not found. Please log in or check the URL.</p>
        <% } %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const viewMode = document.getElementById('viewMode');
            const editMode = document.getElementById('editMode');
            const editProfileBtn = document.getElementById('editProfileBtn');
            const cancelEditBtn = document.getElementById('cancelEditBtn');
            const editForm = document.getElementById('editMode');

            if (editProfileBtn) {
                editProfileBtn.addEventListener('click', () => {
                    viewMode.classList.add('hidden');
                    editMode.classList.remove('hidden');
                });
            }

            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', () => {
                    editMode.classList.add('hidden');
                    viewMode.classList.remove('hidden');
                    // Optionally reset form if you want to discard unsaved changes
                    // editForm.reset(); 
                });
            }

            // Handle form submission via fetch API for a smoother experience
            if (editForm) {
                editForm.addEventListener('submit', async (event) => {
                    event.preventDefault(); // Prevent default form submission

                    const formData = new FormData(editForm);
                    const data = Object.fromEntries(formData.entries());

                    // Get the action URL from the form (e.g., /patient/myProfile or /patient/:patientId)
                    const actionUrl = editForm.getAttribute('action');

                    try {
                        const response = await fetch(actionUrl, {
                            method: 'POST', // Or 'PUT' if your backend expects PUT
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        });

                        const result = await response.json();

                        if (result.success) {
                            alert(result.message);
                            // Refresh the page or update view mode fields to show new data
                            window.location.reload(); // Simple way to refresh and show updated data
                        } else {
                            alert('Error: ' + result.message);
                        }
                    } catch (error) {
                        console.error('Error submitting form:', error);
                        alert('An unexpected error occurred. Please try again.');
                    }
                });
            }
        });
    </script>
</body>
</html>