                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date Issued</th>
                                <th>Doctor</th>
                                <th>Status</th>
                                <th>Validity</th>
                                <th>Medicines</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% prescriptions.forEach(pres => { %>
                                <tr>
                                    <td><%= pres.PRESCRIPTIONID %></td>
                                    <td><%= new Date(pres.DATEISSUED).toLocaleDateString('en-GB') %></td>
                                    <td><%= pres.DoctorName %></td>
                                    <td>
                                        <span class="px-2 py-1 rounded-full text-xs font-semibold
                                            <%= pres.STATUS === 'ACTIVE' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                            <%= pres.STATUS %>
                                        </span>
                                    </td>
                                    <td><%= pres.VALIDITYDAYS %> days</td>
                                    <td><%= pres.MedicinesSummary || 'N/A' %></td>
                                    <td>
                                        <a href="/printPrescription/<%= pres.GLOBALREFERENCEID %>" target="_blank" class="text-blue-600 hover:underline">View/Print</a>
