        <div id="content-doctors-associated" class="tab-content hidden">
            <h2 class="text-xl font-semibold text-gray-700 mb-4">My Associated Doctors</h2>
            <% if (doctorRelationships && doctorRelationships.length > 0) { %>
                <div class="overflow-x-auto">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Doctor ID</th>
                                <th>Name</th>
                                <th>Specialty</th>
                                <th>Phone</th>
                                <th>Relationship Start Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% doctorRelationships.forEach(rel => { %>
                                <tr>
                                    <td><%= rel.DoctorID %></td>
                                    <td><%= rel.DoctorName %></td>
                                    <td><%= rel.Specialty %></td>
                                    <td><%= rel.DoctorPhone %></td>
                                    <td><%= new Date(rel.RelationshipStartDate).toLocaleDateString('en-GB') %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
