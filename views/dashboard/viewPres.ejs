<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Prescription - DoctorSync</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <a href="/" class="text-2xl font-bold text-blue-600 tracking-tight">DoctorSync</a>
                <ul class="flex space-x-6">
                    <li><a href="/findDr" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">Find Doctors</a></li>
                    <li><a href="/viewPres" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">View Prescription</a></li>
                    <li><a href="/login" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Section -->
    <div class="w-full max-w-4xl mx-auto p-8">
        <div class="text-center mb-12 space-y-2">
            <h1 class="text-4xl font-bold text-gray-800">View Prescription</h1>
            <p class="text-gray-600 text-lg">Enter your prescription reference ID below</p>
        </div>

        <!-- Form Box -->
        <div class="bg-white rounded-xl shadow-lg p-10 mb-8">
            <form id="prescriptionForm" target="_blank" class="space-y-6" onsubmit="openPrintView(event)">
                <div>
                    <label class="block text-gray-700 text-sm font-semibold mb-2">
                        Prescription Reference ID
                    </label>
                    <input type="text"
                           name="refId"
                           placeholder="e.g. RX123456"
                           required
                           pattern="RX[0-9]{6}"
                           title="Please enter valid format: RX followed by 6 digits"
                           class="w-full px-4 py-3 rounded-lg border-2 border-blue-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 placeholder-gray-400 transition-all duration-200">
                </div>
                <button type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-[1.02] shadow-lg hover:shadow-xl">
                    View Prescription
                </button>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="text-center text-gray-400">
                <p>&copy; 2025 DoctorSync. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Script -->
    <script>
        function openPrintView(event) {
            event.preventDefault();
            const input = document.querySelector('input[name="refId"]');
            const refId = input.value.trim();

            if (!/^RX\d{6}$/.test(refId)) {
                alert("Please enter valid format: RX followed by 6 digits");
                return;
            }

            window.open(`/printPrescription/${refId}`, '_blank');
        }
    </script>
</body>
</html>
