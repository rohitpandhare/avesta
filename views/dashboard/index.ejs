</head>

<body class="bg-gradient-to-br from-blue-50 to-indigo-50 min-h-screen felx flex-col justify-between">

    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <a href="/" class="text-2xl font-bold text-blue-600 tracking-tight">DoctorSync</a>
                <ul class="flex space-x-6">
                    <li><a href="/findDr" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">Find Doctors</a></li>
                    <li><a href="/viewPres" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">View Prescription</a></li>
                    <li><a href="/login" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">Login</a></li>
                    <!-- <li><a href="/signup" class="text-gray-600 hover:text-blue-600 transition-colors duration-200 font-medium">Register</a></li> -->
                </ul>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="text-center mb-8">
            <h2 class="text-4xl font-bold text-gray-900 mb-4 tracking-tight">Welcome to DoctorSync</h2>
            <h4 class="text-2xl text-blue-600 mb-8 font-semibold">Sync Your Health</h4>
            <p class="text-gray-600 text-lg max-w-3xl mx-auto leading-relaxed">
                Revolutionize your healthcare experience with our integrated platform. Connect with medical professionals and
                manage prescriptions in one secure place.
            </p>
        </div>

        <div class="mb-20">
            <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">Why Choose DoctorSync?</h3>

            <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
                <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-200">
                    <h4 class="text-xl font-semibold mb-3 text-blue-600">Prescription Management</h4>
                    <p class="text-gray-600">Get Real Time Prescriptions from your doctor</p>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-200">
                    <h4 class="text-xl font-semibold mb-3 text-blue-600">Remote Prescription View</h4>
                    <p class="text-gray-600">Get Generated Precriptions Just by its Prescription ID</p>
                </div>
            </div>
        </div>

    </main>

    <form id="otpForm" class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
        <div class="mb-4">
            <label for="email" class="block text-gray-700 mb-2">Enter Email</label>
            <input type="email" name="email" id="email" required 
                   class="w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-200">
            Generate OTP
        </button>
        
        <div id="otpSection" class="hidden mt-4">
            <label for="otp" class="block text-gray-700 mb-2">Enter OTP</label>
            <input type="text" name="otp" id="otp" 
                   class="w-full border border-gray-300 rounded-lg p-2 mb-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="button" id="verifyOtpBtn" class="w-full bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition duration-200">
                Verify OTP
            </button>
        </div>
        
        <div id="message" class="mt-4 text-center"></div>
    </form>


    <footer class="bg-gray-800 text-white ">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid md:grid-cols-3 gap-8">
                <div class="text-center text-gray-400">
                    <p>&copy; 2025 DoctorSync. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>


    <script>
        document.getElementById('verifyOtpBtn').addEventListener('click', async () => {
    const otp = document.getElementById('otp').value;
    if (!otp) {
        messageDiv.textContent = 'OTP is required';
        messageDiv.classList.add('text-red-600');
        return;
    }
    // rest of your verification code
});

        document.getElementById('otpForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const messageDiv = document.getElementById('message');
            messageDiv.textContent = '';
            messageDiv.className = 'mt-4 text-center';
            
            try {
                const response = await fetch('/generate-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email })
                });
                
                const data = await response.json();
                if (response.ok) {
                    document.getElementById('otpSection').classList.remove('hidden');
                    messageDiv.textContent = 'OTP sent to your email!';
                    messageDiv.classList.add('text-green-600');
                    
                    // Handle OTP verification
                    document.getElementById('verifyOtpBtn').addEventListener('click', async () => {
                        const otp = document.getElementById('otp').value;
                        const verifyResponse = await fetch('/verify-otp', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ email, otp })
                        });
                        
                        const verifyData = await verifyResponse.json();
                        if (verifyData.verified) {
                            messageDiv.textContent = 'OTP verified successfully!';
                            messageDiv.classList.add('text-green-600');
                            // Redirect or perform next action
                        } else {
                            messageDiv.textContent = verifyData.error || 'Invalid OTP';
                            messageDiv.classList.add('text-red-600');
                        }
                    });
                } else {
                    messageDiv.textContent = data.error || 'Failed to send OTP';
                    messageDiv.classList.add('text-red-600');
                }
            } catch (error) {
                console.error('Error:', error);
                messageDiv.textContent = 'An error occurred';
                messageDiv.classList.add('text-red-600');
            }
        });
        </script>
</body>

</html>
